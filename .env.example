# API-Direct Environment Configuration
# Copy this to .env and update with your values

# Environment (development, staging, production)
ENVIRONMENT=development

# Database
DATABASE_URL=postgresql://apidirect:password@localhost:5432/apidirect

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-change-in-production
JWT_ALGORITHM=HS256

# AWS Configuration (for production)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# AWS Cognito (for production authentication)
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=xxxxxxxxxxxxxxxxxxxxxxxxxx
COGNITO_REGION=us-east-1

# S3 Buckets
CODE_STORAGE_BUCKET=apidirect-code-storage
ARTIFACTS_BUCKET=apidirect-artifacts

# API Gateway
API_GATEWAY_URL=https://api.apidirect.dev

# Stripe (for payments)
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxx

# Authentication Mode
# Set to "true" to use mock authentication (development only)
USE_MOCK_AUTH=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://console.apidirect.dev,https://marketplace.apidirect.dev

# CLI Configuration (for CLI users)
APIDIRECT_API_ENDPOINT=https://api.apidirect.dev
APIDIRECT_COGNITO_POOL=us-east-1_xxxxxxxxx
APIDIRECT_COGNITO_CLIENT=xxxxxxxxxxxxxxxxxxxxxxxxxx
APIDIRECT_AUTH_DOMAIN=https://api-direct-auth.auth.us-east-1.amazoncognito.com
APIDIRECT_REGION=us-east-1