	maxRevenue := 0.0
	for _, ts := range timeSeries {
		if ts.Revenue > maxRevenue {
			maxRevenue = ts.Revenue
		}
	}
	
	// Display simplified trend
	fmt.Fprintf(w, "   ")
	for _, ts := range timeSeries {
		height := int(ts.Revenue / maxRevenue * 5)
		switch height {
		case 5:
			fmt.Print("‚ñ∞")
		case 4:
			fmt.Print("‚ñ±")
		case 3:
			fmt.Print("‚ñ≤")
		case 2:
			fmt.Print("‚ñ¨")
		case 1:
			fmt.Print("‚ñ™")
		default:
			fmt.Print("_")
		}
	}
	fmt.Fprintf(w, " ($%.0f - $%.0f)\n", timeSeries[0].Revenue, maxRevenue)
}

