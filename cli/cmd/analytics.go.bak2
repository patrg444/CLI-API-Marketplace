	if len(args) > 0 {
		return args[0]
	}
	
	if analyticsAPI != "" {
		return analyticsAPI
	}
	
	// Try to get from manifest
	if manifestPath, err := manifest.FindManifest("."); err == nil {
		if m, err := manifest.Load(manifestPath); err == nil {
			return m.Name
		}
	}
	
	return "" // All APIs
}

