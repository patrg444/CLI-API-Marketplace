func formatNumberShort(n int64) string {
	if n < 1000 {
		return fmt.Sprintf("%d", n)
	}
	if n < 1000000 {
		return fmt.Sprintf("%.1fK", float64(n)/1000)
	}
	if n < 1000000000 {
		return fmt.Sprintf("%.1fM", float64(n)/1000000)
	}
	return fmt.Sprintf("%.1fB", float64(n)/1000000000)
}

func generateBar(percentage float64, width int) string {
	filled := int(percentage * float64(width) / 100)
	bar := strings.Repeat("‚ñà", filled) + strings.Repeat("‚ñë", width-filled)
	return bar
}

func displayUsageChart(timeSeries []TimeSeriesData) {
	// Simple ASCII chart
	if len(timeSeries) == 0 {
		return
	}
	
	// Find max value for scaling
	maxCalls := int64(0)
	for _, ts := range timeSeries {
		if ts.Calls > maxCalls {
			maxCalls = ts.Calls
		}
	}
	
	// Display chart
	height := 10
	for h := height; h >= 0; h-- {
		fmt.Fprintf(w, "   ")
		if h == height {
			fmt.Fprintf(w, "%7s ‚îÇ", formatNumberShort(maxCalls))
		} else if h == 0 {
			fmt.Fprintf(w, "      0 ‚îÇ")
		} else {
			fmt.Fprintf(w, "        ‚îÇ")
		}
		
		for _, ts := range timeSeries {
			barHeight := int(float64(ts.Calls) / float64(maxCalls) * float64(height))
			if barHeight >= h {
				fmt.Print("‚ñà")
			} else {
				fmt.Print(" ")
			}
		}
		fmt.Println()
	}
	
	// X-axis
	fmt.Fprintf(w, "         ‚îî%s\n", strings.Repeat("‚îÄ", len(timeSeries)))
}

func displayRevenueChart(timeSeries []RevenueTimeSeries) {
	// Similar to usage chart but for revenue
